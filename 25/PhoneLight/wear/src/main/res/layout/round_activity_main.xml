<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:deviceIds="wear_square">

    <com.dd.CircularProgressButton
        android:id="@+id/btnFlashLight"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cpb_textComplete="Completed"
        app:cpb_textError="Error"
        app:cpb_textIdle="Switch flashlight"
        app:cpb_colorIndicatorBackground="#d3d3d3"
        app:cpb_colorProgress="#000000"/>

    <com.dd.CircularProgressButton
        android:id="@+id/btnRing"
        android:layout_marginTop="10dp"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cpb_textComplete="Completed"
        app:cpb_textError="Error"
        app:cpb_textIdle="Ring"
        app:cpb_colorIndicatorBackground="#d3d3d3"
        app:cpb_colorProgress="#000000"/>

</LinearLayout>